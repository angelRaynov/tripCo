{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" enctype="multipart/form-data" action="{{ path('car_edit', {'id':car.id}) }}" method="POST">
                <fieldset>
                    <legend>Edit Car</legend>

                    <div class="form-group">
                        <label class="col-sm-4 control-label">Manufacturer</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control"
                                   name="car[manufacturer]" value="{{ car.manufacturer }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Model</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control"
                                   name="car[model]" value="{{ car.model }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Year</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control"
                                   name="car[year]" value="{{ car.year }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Picture</label>
                        <div class="col-sm-4 ">
                            <input type="file" class="form-control" placeholder="Picture"
                                   name="car[picture]">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('default_index') }}">Cancel</a>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}

