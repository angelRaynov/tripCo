{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" action="{{ path('car_delete', {'id':car.id}) }}" method="POST">
                <fieldset>
                    <legend>Delete Car</legend>

                    <div class="form-group">
                        <label class="col-sm-4 control-label">Manufacturer</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control"
                                   name="car[manufacturer]" value="{{ car.manufacturer }}" disabled>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Model</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control"
                                   name="car[model]" value="{{ car.model }}" disabled>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Year</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control"
                                   name="car[year]" value="{{ car.year }}" disabled>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Picture</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control"
                                   name="car[picture]" value="{{ car.picture }}" disabled>
                        </div>
                    </div>
                    {{ form_row(form._token) }}
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('default_index') }}">Cancel</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}

