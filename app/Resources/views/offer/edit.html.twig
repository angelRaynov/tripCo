{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" action="{{ path('offer_edit', {'id':offer.id}) }}" method="POST">
                <fieldset>
                    <legend>Edit Offer</legend>

                    <div class="form-group">
                        <label class="col-sm-4 control-label">From</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control"  placeholder="From"
                                   name="offer[start_destination]" value="{{ offer.startDestination }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">To</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control"  placeholder="To"
                                   name="offer[end_destination]" value="{{ offer.endDestination }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Date</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control"  placeholder="Date"
                                   name="offer[date]" value="{{ offer.date }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Hour</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control"  placeholder="Hour"
                                   name="offer[hour]" value="{{ offer.hour }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Price</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control"  placeholder="Price"
                                   name="offer[price]" value="{{ offer.price }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Seats</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control"  placeholder="Seats"
                                   name="offer[seats]" value="{{ offer.seats }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="offer_message">Message</label>
                        <div class="col-sm-6">
                        <textarea class="form-control" rows="6" id="offer_message"
                                  name="offer[message]" >{{ offer.message }}</textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Luggage</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control"  placeholder="Luggage"
                                   name="offer[luggage]" value="{{ offer.luggage }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Car</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control"  placeholder="Car"
                                   name="offer[car]" value="{{ offer.car }}">
                        </div>
                    </div>
                    {{ form_row(form._token) }}

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('default_index') }}">Cancel</a>
                            <button type="submit" class="btn btn-success">Edit</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}

