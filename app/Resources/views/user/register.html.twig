                        {#</div>#}
                    {#</div>#}
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('default_index') }}">Cancel</a>
                            <input type="submit" class="btn btn-primary" value="Submit">
                        </div>
                    </div>

                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}

