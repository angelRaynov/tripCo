                    {#</div>#}
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="user_name">Phone</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="user_phone" placeholder="Phone" name="user[phone]" required>
                        </div>
                    </div>
                    {#<div class="form-group">#}
